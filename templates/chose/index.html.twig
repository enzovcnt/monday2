    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chose in choses %}
            <tr>
                <td>{{ chose.id }}</td>
                <td>{{ chose.name }}</td>
                <td>
                    <a href="{{ path('app_chose_show', {'id': chose.id}) }}">show</a>
